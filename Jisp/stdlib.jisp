;; Boolean Operators

($| (λ a b
	(? a true (? b true false))))

($& (λ a b
	(? a (? b true false) false)))

($! (λ a
	(? a false true)))


;; Function Operators

($>> (λ f g 
	(λ x (g (f (x))))))

($<< (λ f g 
	(λ x (f (g (x))))))


