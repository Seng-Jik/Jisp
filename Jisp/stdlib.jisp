;;;;;;;; Boolean Operators

;; Or Operator
;; bool -> bool -> bool
($| (λ a b (a true b)))
;; And Operator
;; bool -> bool -> bool
($& (λ a b (a b false)))

;; Xor Operator
;; bool -> bool -> bool
($xor (λ a b (a (not b) b)))

;; Not Operator
;; bool -> bool
($! (λ a (a false true)))

