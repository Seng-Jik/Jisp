;; Comparison Operators

($= (λ a b 										;; Defined by Runtime
	(= a b)))

($< (λ a b 										;; Defined by Runtime
	(< a b)))

($!= (λ a b
	(! (= a b))))

($<= (λ a b
	(| (< a b) (= a b))))

($> (λ a b 
	(! (<= a b))))

($>= (λ a b 
	(| (> a b) (= a b))))



